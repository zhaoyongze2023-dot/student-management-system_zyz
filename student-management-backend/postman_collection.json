{
  "info": {
    "name": "Student Management API",
    "description": "学生管理系统 API 测试集合",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "认证",
      "item": [
        {
          "name": "获取验证码",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/auth/captcha",
              "host": ["{{base_url}}"],
              "path": ["auth", "captcha"]
            }
          }
        },
        {
          "name": "用户登录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"Test@123456\",\n  \"captchaKey\": \"{{captcha_key}}\",\n  \"captcha\": \"1234\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "用户注册",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"Strong@123456\",\n  \"email\": \"newuser@example.com\",\n  \"phone\": \"13800138000\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "刷新 Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "登出",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["auth", "logout"]
            }
          }
        },
        {
          "name": "获取当前用户信息",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/user",
              "host": ["{{base_url}}"],
              "path": ["auth", "user"]
            }
          }
        }
      ]
    },
    {
      "name": "学生管理",
      "item": [
        {
          "name": "获取学生列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/student/list?current=1&size=10&keyword=&classId=&status=",
              "host": ["{{base_url}}"],
              "path": ["student", "list"],
              "query": [
                {
                  "key": "current",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "keyword",
                  "value": ""
                },
                {
                  "key": "classId",
                  "value": ""
                },
                {
                  "key": "status",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "获取学生详情",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/student/1",
              "host": ["{{base_url}}"],
              "path": ["student", "1"]
            }
          }
        },
        {
          "name": "创建学生",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"李四\",\n  \"studentId\": \"2024002\",\n  \"classId\": 1,\n  \"gender\": \"F\",\n  \"age\": 20,\n  \"phone\": \"13800138001\",\n  \"email\": \"student2@example.com\",\n  \"major\": \"计算机科学与技术\",\n  \"admissionYear\": 2024,\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/student",
              "host": ["{{base_url}}"],
              "path": ["student"]
            }
          }
        },
        {
          "name": "修改学生",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"李四（已修改）\",\n  \"studentId\": \"2024002\",\n  \"classId\": 1,\n  \"gender\": \"F\",\n  \"age\": 21,\n  \"phone\": \"13800138001\",\n  \"email\": \"student2@example.com\",\n  \"major\": \"计算机科学与技术\",\n  \"admissionYear\": 2024,\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/student/1",
              "host": ["{{base_url}}"],
              "path": ["student", "1"]
            }
          }
        },
        {
          "name": "删除学生",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/student/1",
              "host": ["{{base_url}}"],
              "path": ["student", "1"]
            }
          }
        },
        {
          "name": "批量删除学生",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ids\": [1, 2, 3]\n}"
            },
            "url": {
              "raw": "{{base_url}}/student/batch-delete",
              "host": ["{{base_url}}"],
              "path": ["student", "batch-delete"]
            }
          }
        }
      ]
    },
    {
      "name": "数据字典",
      "item": [
        {
          "name": "获取班级列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/dict/classes",
              "host": ["{{base_url}}"],
              "path": ["dict", "classes"]
            }
          }
        },
        {
          "name": "获取状态字典",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/dict/status",
              "host": ["{{base_url}}"],
              "path": ["dict", "status"]
            }
          }
        },
        {
          "name": "获取性别字典",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/dict/gender",
              "host": ["{{base_url}}"],
              "path": ["dict", "gender"]
            }
          }
        }
      ]
    },
    {
      "name": "文件上传",
      "item": [
        {
          "name": "上传头像",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "path/to/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/upload/avatar",
              "host": ["{{base_url}}"],
              "path": ["upload", "avatar"]
            }
          }
        },
        {
          "name": "为学生更新头像",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "path/to/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/upload/student/1/avatar",
              "host": ["{{base_url}}"],
              "path": ["upload", "student", "1", "avatar"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "refresh_token",
      "value": ""
    },
    {
      "key": "captcha_key",
      "value": ""
    }
  ]
}
